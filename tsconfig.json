{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "diagnostics": true,
    "noErrorTruncation": true,
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "types": ["node"],
  },
  "exclude": ["node_modules"]
}
